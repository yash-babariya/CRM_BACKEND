    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "if (pm.environment.get('token_expires_at') && new Date().getTime() > pm.environment.get('token_expires_at')) {",
                    "    pm.sendRequest({",
                    "        url: pm.environment.get('base') + '/auth/refresh',",
                    "        method: 'POST',",
                    "        header: {",
                    "            'Content-Type': 'application/json',",
                    "            'Authorization': 'Bearer ' + pm.environment.get('refresh_token')",
                    "        }",
                    "    }, function (err, res) {",
                    "        if (!err && res.code === 200) {",
                    "            pm.environment.set('token', res.json().token);",
                    "            pm.environment.set('token_expires_at', new Date().getTime() + (res.json().expiresIn * 1000));",
                    "        }",
                    "    });",
                    "}"
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "base",
            "value": "http://localhost:5353/api/v1"
        }
    ]
}